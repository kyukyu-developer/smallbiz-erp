{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "YourSuperSecretKeyHereMustBeAtLeast32Characters!",
    "Issuer": "ERP.Microservices",
    "Audience": "ERP.Microservices.Clients"
  },
  "ReverseProxy": {
    "Routes": {
      "identity-auth-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/identity/auth/{**catch-all}"
        }
      },
      "identity-route": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/identity/{**catch-all}"
        }
      },
      "inventory-route": {
        "ClusterId": "inventory-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/inventory/{**catch-all}"
        }
      },
      "sales-route": {
        "ClusterId": "sales-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/sales/{**catch-all}"
        }
      },
      "purchasing-route": {
        "ClusterId": "purchasing-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/purchasing/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-api": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "inventory-cluster": {
        "Destinations": {
          "inventory-api": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "sales-cluster": {
        "Destinations": {
          "sales-api": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "purchasing-cluster": {
        "Destinations": {
          "purchasing-api": {
            "Address": "http://localhost:5004"
          }
        }
      }
    }
  }
}
